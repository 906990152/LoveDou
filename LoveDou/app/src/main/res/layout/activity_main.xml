<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sgl.dou.MainActivity">

    <TextView
        android:id="@+id/t"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_30dp"/>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/common_4dp"
        android:layout_marginTop="@dimen/common_12dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/common_8dp"
        android:paddingTop="@dimen/common_8dp"
        tl:tl_divider_padding="@dimen/common_4dp"
        tl:tl_divider_width="@dimen/common_0dp"
        tl:tl_indicator_height="@dimen/common_0dp"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_padding="@dimen/common_4dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/color_tv_orange_c8"
        tl:tl_textUnselectColor="@color/color_tv_gray_99"
        tl:tl_textsize="@dimen/text_size_14sp"
        tl:tl_underline_color="@color/trans" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_0.5dp"
        android:background="@color/color_tv_gray_e5" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_50dp"
        android:background="@color/white" />


</LinearLayout>
